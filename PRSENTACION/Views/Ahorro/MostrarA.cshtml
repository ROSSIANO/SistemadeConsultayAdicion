@model IEnumerable<ENTITY.AHORRO>

@{
    ViewBag.Title = "MostrarA";
}

<h2>Mostrar Ahorros</h2>

<p>
    <a class="btn btn-info" href="/Ahorro/CrearA/"> CREAR CUENTA DE AHORRO</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FECHAA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MONTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDCLIENTE)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FECHAA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MONTO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDCLIENTE)
            </td>
            <td>
                @Html.ActionLink("Edit", "ActualizarA", new { id = item.ID }) |
                
                @Html.ActionLink("Delete", "Borrar", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Regresar al Menu Principal", "ELogin", "Menu")
</div>